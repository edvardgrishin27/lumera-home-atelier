# ─── Frontend (baked into JS bundle at build time) ───

# Secret UUID for admin panel URL (e.g., /panel/{UUID}/login)
# Generate: python3 -c "import uuid; print(uuid.uuid4())"
VITE_ADMIN_UUID=your_uuid_here

# ─── Backend (server-side only, NOT in bundle) ───

# SHA-256 hash of admin password
# Generate: echo -n "YourPassword" | shasum -a 256
ADMIN_PASSWORD_HASH=your_sha256_hash_here

# TOTP secret for 2FA (Base32 encoded)
# Generate: python3 -c "import secrets,base64; print(base64.b32encode(secrets.token_bytes(20)).decode().rstrip('='))"
TOTP_SECRET=your_totp_secret_here

# API secret for legacy/fallback auth (transitional)
API_SECRET=your_random_secret_here

# ─── Database ───
DB_PASSWORD=your_db_password_here

# ─── S3 Storage ───
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key
